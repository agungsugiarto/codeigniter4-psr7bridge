{
    "name": "agungsugiarto/codeigniter4-psr7bridge",
    "description": "CodeIgniter 4 PSR HTTP message bridge",
    "keywords": ["codeigniter4", "http", "psr-7", "psr-17", "http-message", "http-factory"],
    "license": "MIT",
    "authors": [
        {
            "name": "Agung Sugiarto",
            "email": "me.agungsugiarto@tgmail.com",
            "homepage": "https://agungsugiarto.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "codeigniter4/framework": "^4.0",
        "psr/http-message": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "CodeIgniter\\Psr7Bridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeIgniter\\Psr7Bridge\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "nyholm/psr7": "^1.3"
    },
    "suggest": {
        "nyholm/psr7": "For a super lightweight PSR-7/17 implementation"
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    }
}
