{
    "name": "agungsugiarto/codeigniter4-psr7bridge",
    "description": "CodeIgniter 4 PSR HTTP message bridge",
    "keywords": ["codeigniter4", "http", "psr-7", "psr-17", "http-message", "http-factory"],
    "license": "MIT",
    "authors": [
        {
            "name": "Agung Sugiarto",
            "email": "me.agungsugiarto@tgmail.com",
            "homepage": "https://agungsugiarto.github.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "codeigniter4/framework": "^4.2",
        "psr/http-message": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Fluent\\HttpMessageBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fluent\\HttpMessageBridge\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "php-http/psr7-integration-tests": "^1.0",
        "laminas/laminas-diactoros": "^2.17",
        "nyholm/psr7": "^1.5"
    },
    "suggest": {
        "nyholm/psr7": "For a super lightweight PSR-7/17 implementation",
        "": "laminas-diactoros is a PHP package containing implementations of the PSR-7 HTTP message interfaces and PSR-17 HTTP message factory interfaces."
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
